{{!
    @template block_news_slider_plus/slider

    Display News Slider Plus

    News content json template

    {
    "news": [
        {"headline":"Headline 1", "message":"Content 1"},
        {"headline":"Headline 1", "message":"Content 2"},
        {"headline":"Headline 1", "content":"Content 3"}
    ]
}
}}

<div id="slider-container" class="style4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 container">
            <h2><span style="font-weight: 100;">{{title}}</h2>
                <div class="multiple-items slider-col row">
                    {{#news}}
                        <div class="news_item">

                            <figure class="snip1312">
                              <div class="image">
                                <img src="{{{attachedimage_url}}}"/>
                              </div>
                              <figcaption>
                                <div class="date"><span class="day" style="background:{{{colour}}}">{{{daycreated}}}</span><span class="month" style="background:{{{colour}}};">{{{monthcreated}}}</span></div>
                                <h3>{{{subject}}}</h3>
                                <p>{{{shortmessage}}}
                                </p>
                                <div class="footer" style="background:{{{colour}}}">
                                  <div class="comments">{{{course}}}</div>
                                </div>
                              </figcaption><a href="{{{link}}}"></a>
                            </figure>

                        </div>
                    {{/news}}
                    <!--<a class="seeall" href="{{#links}}{{{newslink}}}{{/links}}">[ All Site News ]</a>-->
                </div>
            </div>
            <div class="col-md-12 container blog">
            <h2><span style="font-weight: 100;">{{#str}} sitename, block_news_slider_plus {{/str}}</span> <span>Blog</span></h2>
                <div class="blog-container">
                     <ul style="display: inline-table;">
                        {{#blogs}}
                            <li class="col-xs-12 col-sm-6 col-md-4 col-lg-4 inline-blog">
                                <h5>{{{headline}}}</h5>
                                <span>{{{message}}}</span>
                                <!--<span><br>{{{author}}} - {{{datecreated}}}</span>-->
                            </li> 
                        {{/blogs}}
                     </ul>
                     <a class="seeall" href="{{#links}}{{{blogslink}}}{{/links}}">[ All Blogs ]</a>
                </div>
            </div>
       </div>
    </div>
</div>



